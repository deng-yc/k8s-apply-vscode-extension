{
	"name": "k8s-apply-vscode-extension",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1"
	},
  "author": "Filip Johansson",
  "publisher": "filip-ph-johansson",
  "repository": {
    "type": "git",
    "url": "https://github.com/filip-ph-johansson/k8s-apply-vscode-extension"
  },
	"license": "MIT",
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onCommand:extension.apply",
		"onCommand:extension.delete"
	],
	"contributes": {
		"commands": [
			{
				"command": "extension.apply",
        "title": "k8s: Apply"
			},
			{
				"command": "extension.delete",
        "title": "k8s: Delete"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.apply",
          "group": "YourGroup@1",
          "when": "resourceLangId == yaml"
				},
				{
					"command": "extension.delete",
          "group": "YourGroup@1",
          "when": "resourceLangId == yaml"
				}
			],
			"explorer/context": [
				{
					"command": "extension.apply",
          "group": "YourGroup@1",
          "when": "resourceLangId == yaml"
				},
				{
					"command": "extension.delete",
          "group": "YourGroup@1",
          "when": "resourceLangId == yaml"
				}
			]
		}
	},
	"devDependencies": {
		"vscode": "^1.1.34"
	}
}
